<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Booking Completed Title -->
        <TextView
            android:id="@+id/booking_completed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Completed!!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Date and Time -->
        <TextView
            android:id="@+id/booking_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024/11/03(Sun)\n11:00am - 12:00pm"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Confirmation Message -->
        <TextView
            android:id="@+id/confirmation_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for your reservation."
            android:background="@color/light_green"
            android:padding="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Reservation Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="4dp">

            <!-- Salon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Salon:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/booking_salon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Salon A"
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Menu:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/booking_menu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="No Menu"
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Stylist -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Stylist:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/booking_stylist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Stylist A"
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- My Page Button -->
        <Button
            android:id="@+id/mypage_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mypage"
            android:background="@color/light_green"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
