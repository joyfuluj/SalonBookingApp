<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/pink"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="back"
            android:text="&lt;"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:layout_gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/title_pick_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Date &amp; Time"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:padding="8dp" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Salon Name -->
            <TextView
                android:id="@+id/salon_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salon A"
                android:textSize="24dp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="38dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <!-- Coupon/Menu selected -->
            <TextView
                android:id="@+id/selected_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selected Coupon / Menu: Coupon A"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- Stylist Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select your preferred stylist"
                android:textSize="16sp"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="8dp">

                <Button
                    android:id="@+id/stylist_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Stylist A" />

                <Button
                    android:id="@+id/stylist_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Stylist B" />

                <Button
                    android:id="@+id/stylist_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stylist C" />
            </LinearLayout>

            <!-- Stylist Details -->
            <LinearLayout
                android:id="@+id/stylist_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/darker_gray"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/stylist_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/baseline_person_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stylist_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stylist A"
                        android:textSize="18sp"
                        android:paddingBottom="4dp" />

                    <EditText
                        android:id="@+id/message_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Message"
                        android:background="@android:color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- Calendar -->
            <TextView
                android:id="@+id/calendar_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="November, 2024"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="16sp" />

            <GridLayout
                android:id="@+id/time_slot_grid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:columnCount="8"
                android:layout_weight="1"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                app:layout_constraintTop_toBottomOf="@id/stylist_details"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <!-- Dynamically added time slots go here -->
            </GridLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
